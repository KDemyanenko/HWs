fn main() {
    // Передаємо кортеж із двома числами в функцію, який виконує обчислення
    let (x, y) = sum_multiply((2, 3)); // Замінив пропущений кортеж (2, 3)

    assert_eq!(x, 5);
    assert_eq!(y, 6);

    println!("Success!");
}

fn sum_multiply(nums: (i32, i32)) -> (i32, i32) {
    (nums.0 + nums.1, nums.0 * nums.1)
}
